generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Animation {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  name        String
  content     Content?
}

model Content {
  id            Int        @id @default(autoincrement())
  filename      String
  filetype      String
  metadata      String?     
  content       String     
  animation     Animation  @relation(fields: [animationId], references: [id])
  animationId   Int        @unique
}